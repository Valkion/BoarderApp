@model IEnumerable<BoarderApp.Models.Unit>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Unit Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model )
                {
                    <tr>
                        <td>@unit.UnitName</td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
        {
            <p>No Data</p>
        }