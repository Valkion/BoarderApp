@model IEnumerable<BoarderApp.Models.Customer>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Active Boaders List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>





    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Active
                    </th>
                    <th>
                        Date Created
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model )
                {
                    <tr>
                        <td width="25%">@customer.FirstName</td>
                        <td width="25%">@customer.LastName</td>
                        <td width="25%">@customer.Active</td>
                        <td width="25%">@customer.DateCreated.ToString("dd MMM yyyy")</td>

                 
                    </tr>
                }

            </tbody>
        </table>
    }
    else
        {
            <p>No Data</p>
        }
    
</div> 




